<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
         type="TabPane" xmlns="http://javafx.com/javafx/25"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.example.controller.PrimaryController">

    <tabs>
        <!-- Tab Sítio -->
        <Tab fx:id="tap_sitio" text="Sítio">
            <content>
                <AnchorPane fx:id="acp_sitio" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #034C8C;">
                    <children>
                        <!-- Formulário à esquerda -->
                        <VBox layoutX="50.0" layoutY="50.0" spacing="25.0" prefWidth="250.0">
                            <children>
                                <!-- Campo Tamanho -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tamanho" textFill="#fdfdfd">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_tam1" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Duende -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Duende" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_duende" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Cogumelo -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Cogumelo" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_cogu" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Botão Salvar -->
                                <Button fx:id="btn_salvar1" mnemonicParsing="false"
                                        style="-fx-background-color: #F27B13; -fx-background-radius: 5;"
                                        text="Salvar" textFill="WHITE"
                                        prefWidth="100.0" prefHeight="35.0"
                                        layoutX="75.0" />
                            </children>
                        </VBox>

                        <!-- Imagem à direita -->
                        <ImageView fitHeight="250.0" fitWidth="250.0"
                                   layoutX="350.0" layoutY="75.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@sitio.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
            </content>
        </Tab>

        <!-- Tab Planta -->
        <Tab fx:id="tap_planta" text="Planta">
            <content>
                <AnchorPane fx:id="acp_planta" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FC4A96;">
                    <children>
                        <!-- Formulário à esquerda -->
                        <VBox layoutX="50.0" layoutY="50.0" spacing="25.0" prefWidth="250.0">
                            <children>
                                <!-- Campo Tamanho -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tamanho">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_tam2" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Cor -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Cor">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_cor1" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Espécie -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Espécie">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_espe" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Botão Salvar -->
                                <Button fx:id="btn_salvar2" mnemonicParsing="false"
                                        style="-fx-background-color: #85A60F; -fx-background-radius: 5;"
                                        text="Salvar"
                                        prefWidth="100.0" prefHeight="35.0" />
                            </children>
                        </VBox>

                        <!-- Imagem à direita -->
                        <ImageView fitHeight="250.0" fitWidth="200.0"
                                   layoutX="350.0" layoutY="75.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@planta.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
            </content>
        </Tab>

        <!-- Tab Dog -->
        <Tab fx:id="tap_planta1" text="Dog">
            <content>
                <AnchorPane fx:id="acp_dog" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #A6588A;">
                    <children>
                        <!-- Formulário à esquerda -->
                        <VBox layoutX="50.0" layoutY="50.0" spacing="25.0" prefWidth="250.0">
                            <children>
                                <!-- Campo Nome -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nome" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_nome" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Cor -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Cor" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_cor3" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Idioma -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Idioma" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_idioma" prefWidth="200.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Botão Salvar -->
                                <Button fx:id="btn_salvar3" mnemonicParsing="false"
                                        style="-fx-background-color: #A64E46; -fx-background-radius: 5;"
                                        text="Salvar" textFill="WHITE"
                                        prefWidth="100.0" prefHeight="35.0" />
                            </children>
                        </VBox>

                        <!-- Imagem à direita -->
                        <ImageView fitHeight="250.0" fitWidth="180.0"
                                   layoutX="370.0" layoutY="75.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@dog.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</fx:root>