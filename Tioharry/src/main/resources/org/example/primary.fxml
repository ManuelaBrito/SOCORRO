<?import javafx.scene.text.Font?>

<TabPane fx:id="mainTabPane" prefHeight="900" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/17.0.2"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.example.controller.PrimaryController">

    <tabs>
        <!-- Tab Sítio -->
        <Tab fx:id="tap_sitio" text="Sítio">
            <content>
                <AnchorPane fx:id="acp_sitio" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #034C8C;">
                    <children>
                        <!-- Formulário à esquerda -->
                        <VBox layoutX="20.0" layoutY="20.0" spacing="15.0" prefWidth="300.0">
                            <children>
                                <!-- Campo Tamanho -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tamanho" textFill="#fdfdfd">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_tam1" prefWidth="250.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Duende -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Duende" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_duende" prefWidth="250.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Campo Cogumelo -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Cogumelo" textFill="WHITE">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txt_cogu" prefWidth="250.0" prefHeight="30.0" />
                                    </children>
                                </VBox>

                                <!-- Botões -->
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="btn_salvar1" mnemonicParsing="false"
                                                style="-fx-background-color: #F27B13; -fx-background-radius: 5;"
                                                text="Salvar" textFill="WHITE"
                                                prefWidth="80.0" prefHeight="35.0"
                                                onAction="#salvarDados1" />
                                        <Button fx:id="btn_editar1" mnemonicParsing="false"
                                                style="-fx-background-color: #2196F3; -fx-background-radius: 5;"
                                                text="Editar" textFill="WHITE"
                                                prefWidth="80.0" prefHeight="35.0"
                                                onAction="#editarSitio" />
                                        <Button fx:id="btn_excluir1" mnemonicParsing="false"
                                                style="-fx-background-color: #D32F2F; -fx-background-radius: 5;"
                                                text="Excluir" textFill="WHITE"
                                                prefWidth="80.0" prefHeight="35.0"
                                                onAction="#excluirDados1" />
                                        <Button mnemonicParsing="false"
                                                style="-fx-background-color: #757575; -fx-background-radius: 5;"
                                                text="Limpar" textFill="WHITE"
                                                prefWidth="80.0" prefHeight="35.0"
                                                onAction="#limparDados1" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Imagem no meio -->
                        <ImageView fitHeight="250.0" fitWidth="250.0"
                                   layoutX="450.0" layoutY="20.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@sitio.png" />
                            </image>
                        </ImageView>

                        <!-- Tabela à direita -->
                        <TableView fx:id="Table_sítio" layoutX="350.0" layoutY="300.0" prefHeight="250.0" prefWidth="430.0">
                            <columns>
                                <TableColumn fx:id="col_sitio_id" prefWidth="50" text="ID" />
                                <TableColumn fx:id="col_sitio_tamanho" prefWidth="120" text="Tamanho" />
                                <TableColumn fx:id="col_sitio_duende" prefWidth="120" text="Duende" />
                                <TableColumn fx:id="col_sitio_cogumelo" prefWidth="120" text="Cogumelo" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </Tab>

