<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane styleClass="pane-principal" prefHeight="400.0" prefWidth="600.0" stylesheets="@telatarefas.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.com.br.CRUD.controller.TelaTarefasController">
    <children>
        <Label fx:id="labelUsuario" layoutX="49.0" layoutY="70.0" styleClass="label-usuario" text="Bem-vindo!" />

        <Label layoutX="70.0" layoutY="110.0" styleClass="label-tarefa" text="Nova Tarefa:" />
        <TextField fx:id="txt_novatarefa" layoutX="155.0" layoutY="106.0" prefHeight="30.0" prefWidth="200.0" promptText="Digite a nova tarefa" styleClass="campo-tarefa" />

        <Label layoutX="410.0" layoutY="85.0" styleClass="label-tarefa" text="Data Limite:">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </Label>
        <DatePicker fx:id="txt_calendario" layoutX="410.0" layoutY="106.0" styleClass="datepicker-tarefa" />

        <Button fx:id="btn_adicionar" layoutX="360.0" layoutY="106.0" prefWidth="40.0" prefHeight="40.0" text="+" />

        <TableView fx:id="tabelaTarefas" layoutX="100.0" layoutY="200.0" prefHeight="300.0" prefWidth="500.0" styleClass="tabela-tarefas">
            <columns>
                <TableColumn fx:id="colConcluida" prefWidth="50" text="✔" />
                <TableColumn fx:id="colTarefa" prefWidth="250" text="Tarefa" />
                <TableColumn fx:id="colDataFinal" prefWidth="100" text="Data Final" />
                <TableColumn fx:id="colAcoes" prefWidth="100" text="Ações" />
            </columns>
        </TableView>

        <Button fx:id="btn_logout" layoutX="550.0" layoutY="29.0" styleClass="botao-logout" text="Logout" />
    </children>
</Pane>