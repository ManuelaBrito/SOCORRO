<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Cabeçalho -->
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sistema de Feedback Acadêmico" />

        <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Bem-vindo!" />

        <Label fx:id="alunoInfoLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Email: " />
    </VBox>

    <Separator prefWidth="400" />

    <!-- Seção de Controle -->
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#handleAlternarAluno" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-weight: bold;" text="Alternar Aluno" />
    </HBox>

    <!-- Seção de Seleção de Feedback -->
    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Selecione o Feedback:" />

        <HBox alignment="CENTER_LEFT" spacing="10">
            <ComboBox fx:id="feedbackComboBox" onAction="#handleSelecionarFeedback" prefWidth="350" />
            <Button fx:id="visualizarButton" onAction="#handleVisualizarFeedback" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Visualizar Feedback" />
        </HBox>
    </VBox>

    <!-- Área de Visualização do Feedback -->
    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Feedback do Professor:" />

        <TextArea fx:id="feedbackTextArea" editable="false" prefRowCount="15" prefWidth="600" style="-fx-font-family: 'Arial'; -fx-font-size: 12px; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" wrapText="true" />
    </VBox>

    <!-- Rodapé -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
        <Label style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="🔒 Acesso seguro e restrito ao aluno" />
    </HBox>

</VBox>
