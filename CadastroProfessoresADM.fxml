<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.professorTG.CadastroProfessoresController">

    <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <tabs>
            <!-- Aba 1: Cadastro Individual -->
            <Tab text="Cadastro Individual">
                <content>
                    <ScrollPane fitToWidth="true" style="-fx-padding: 20;">
                        <content>
                            <AnchorPane style="-fx-pref-height: 900px;">

                                <!-- Título -->
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Cadastro Professor de TG" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />

                                <!-- Container principal -->
                                <VBox spacing="15" style="-fx-pref-width: 800px;" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="40">

                                    <!-- Nome completo -->
                                    <VBox spacing="2">
                                        <Label text="Nome completo:" />
                                        <TextField fx:id="txtNome" promptText="Digite o nome completo" style="-fx-pref-width: 800px; -fx-pref-height: 35px;" styleClass="text-field" />
                                    </VBox>

                                    <!-- E-mail -->
                                    <VBox spacing="2">
                                        <Label text="E-mail:" />
                                        <TextField fx:id="txtEmail" promptText="Digite o e-mail" style="-fx-pref-width: 800px; -fx-pref-height: 35px;" styleClass="text-field" />
                                    </VBox>

                                    <!-- Cargo/Função -->
                                    <VBox spacing="2">
                                        <Label text="Cargo/função" />
                                        <TextField fx:id="txtCargo" promptText="Digite o cargo/função" style="-fx-pref-width: 800px; -fx-pref-height: 35px;" styleClass="text-field" />
                                    </VBox>

                                    <!-- Curso Vinculado -->
                                    <VBox spacing="2" />

                                    <!-- Formação Acadêmica -->
                                    <VBox spacing="2" />

                                    <!-- Áreas de Especialização -->
                                    <VBox spacing="2" />

                                    <!-- BOTÕES SALVAR E CANCELAR -->
                                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
                                        <Button fx:id="btnSalvar" onAction="#salvarProfessor" style="-fx-pref-width: 100px;" styleClass="button" text="Salvar" />
                                        <Button fx:id="btnCancelar" onAction="#cancelar" style="-fx-pref-width: 100px;" styleClass="button-secondary" text="Cancelar" />
                                    </HBox>

                                </VBox>

                                <!-- LISTA DE PROFESSORES CADASTRADOS -->
                                <VBox spacing="10" style="-fx-pref-width: 800px;" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="590" />

                                 <Label layoutX="14.0" layoutY="373.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 30 0 10 0;" text="Professores de TG Cadastrados" />

                                    <!-- TABELA COM AÇÕES -->
                                 <TableView fx:id="tableViewProfessores" layoutX="-34.0" layoutY="438.0" prefWidth="464.0" style="-fx-pref-height: 250px; -fx-pref-width: 800px;" styleClass="card">
                                     <columns>
                                         <TableColumn fx:id="colNome" prefWidth="302.66668701171875" text="Nome" />
                                         <TableColumn fx:id="colEmail" prefWidth="228.66665649414062" text="Email" />
                                         <TableColumn fx:id="colCargo" prefWidth="235.3333740234375" text="Cargo" />
                                     </columns>
                                 </TableView>

                            </AnchorPane>
                        </content>
                    </ScrollPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>

</AnchorPane>
